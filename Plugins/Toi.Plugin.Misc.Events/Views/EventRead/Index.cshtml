@model EventIndexModel
    @{
        Layout = "~/Views/Shared/_ColumnsTwoIntro.cshtml";
    }
    @section left{
        @Html.Action("InfoBlock", "Common")
    }
    @section YouAreHere{
        <div class="youAreHere">
            <ul>
                <li><a href="@Url.RouteUrl("Homepage")">@T("Homepage")</a></li>
                <li class="active"><a href="#">@T("Toi.Plugin.Misc.Events.Event")</a></li>
            </ul>
        </div>
    }
<h4 class="titleIntroDiv">@T("Toi.Plugin.Misc.Events.Event")</h4>
<div class="row breakPages">
    @Html.Pager(Model.PagingFilteringContext).QueryParam("pagenumber")
</div>

    <div class="row rightContent">
        @foreach (var evt in Model.Events)
{
    <div class="row col-xs-12 col_right newsItem">
        <h5><a href="@Url.Action("Detail","EventRead", new {id = evt.Id})">@Html.Raw(evt.Title)</a> </h5>
        <div class="col-sm-3 imageEvent">
            <a href="@Url.Action("Detail","EventRead", new {id = evt.Id})">
                <div class="crop">
                    <img src="@evt.PictureModel.ImageUrl">
                </div>
            </a> 
        </div>
        <div class="col-sm-9">
            @Html.Raw(evt.Short)
            <button class="btn btn-xs btn-info" type="button" onclick="document.location='@Url.Action("Detail","EventRead", new {id = evt.Id})'">@T("Toi.Plugin.Misc.Events.Detail")</button>
        </div>
    </div>
}
    </div>
    <div class="row breakPages">
    @Html.Pager(Model.PagingFilteringContext).QueryParam("pagenumber")
</div>
